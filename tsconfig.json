{
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es2017",
    "module": "es2020",
    "strict": true,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "api": ["api"],
      "api/*": ["api/*"],
      "utils": ["utils"],
      "utils/*": ["utils/*"],
      "components": ["components"],
      "components/*": ["components/*"],
      "routes": ["routes"],
      "routes/*": ["routes/*"],
      "stores": ["stores"],
      "stores/*": ["stores/*"],
      "consts": ["consts"],
      "consts/*": ["consts/*"],
      "entities": ["types/entities"],
      "entities/*": ["types/entities/*"],
      "structs": ["structs"],
      "structs/*": ["structs/*"],
      "interfaces": ["types/interfaces"],
      "interfaces/*": ["types/interfaces/*"],
      "types": ["types"],
      "types/*": ["types/*"],
      "src/*": ["*"]
    }
  },
  "lib": [
    "es2017",
    "dom"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
